@using Ridex_Car_Showroom.DAL
@model int;
@{
    Layout = "_Layout";
    Cars car = new AppDbContext().Cars.Where(x => x.Id == Model).First();
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap-grid.min.css" />

<style>
    .card-detail-list {
        border-bottom: 1px dotted #ccc;
        padding: 5px 0px;
    }


    .card-detail-list-item {
        text-align: left;
    }
</style>
<div class="row mx-5" style="margin-top:7rem; margin-bottom:4rem; padding:2rem; border:4px solid #fff; border-radius:35px">
    <div class="col-sm-8 d-flex justify-content-center">
        <img src="~/img/@car.Resim" alt="@car.Marka @car.Model @car.UretimYili" style="overflow:hidden;" loading="lazy">
    </div>
    <div class="col-sm-4">
        <div>
            <h3>@car.Marka @car.Model</h3>
        </div>
        <ul class="car-detail">

            <li class="card-detail-list">
                <div class="row">
                    <div class="col-6">
                        <div class="card-detail-list-item"><strong>İlan no</strong></div>
                    </div>
                    <div class="col-6">
                        <div class="card-detail-list-item">@car.Id</div>
                    </div>
                </div>
            </li>

            <li class="card-detail-list">
                <div class="row">
                    <div class="col-6">
                        <div class="card-detail-list-item"><strong>İlan Tarihi</strong></div>
                    </div>
                    <div class="col-6">
                        <div class="card-detail-list-item">@car.IlanTarihi</div>
                    </div>
                </div>
            </li>

            <li class="card-detail-list">
                <div class="row">
                    <div class="col-6">
                        <div class="card-detail-list-item"><strong>Marka</strong></div>
                    </div>
                    <div class="col-6">
                        <div class="card-detail-list-item">@car.Marka</div>
                    </div>
                </div>
            </li>

            <li class="card-detail-list">
                <div class="row">
                    <div class="col-6">
                        <div class="card-detail-list-item"><strong>Model</strong></div>
                    </div>
                    <div class="col-6">
                        <div class="card-detail-list-item">@car.Model</div>
                    </div>
                </div>
            </li>

            <li class="card-detail-list">
                <div class="row">
                    <div class="col-6">
                        <div class="card-detail-list-item"><strong>Model Yılı</strong></div>
                    </div>
                    <div class="col-6">
                        <div class="card-detail-list-item">@car.UretimYili</div>
                    </div>
                </div>
            </li>

            <li class="card-detail-list">
                <div class="row">
                    <div class="col-6">
                        <div class="card-detail-list-item"><strong>Vites</strong></div>
                    </div>
                    <div class="col-6">
                        <div class="card-detail-list-item">@car.VitesTipi</div>
                    </div>
                </div>
            </li>

            <li class="card-detail-list">
                <div class="row">
                    <div class="col-6">
                        <div class="card-detail-list-item"><strong>Yakıt</strong></div>
                    </div>
                    <div class="col-6">
                        <div class="card-detail-list-item">@car.YakitTipi</div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>
